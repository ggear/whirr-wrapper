#!/bin/sh

if [ -z "${WHIRR_HOME+xxx}" ]; then
  echo "WHIRR_HOME not set"
  exit 1
fi

if [ -z "${WHIRR_WRAPPER_HOME+xxx}" ]; then
  WHIRR_WRAPPER_HOME=$(pwd)/..
fi

mkdir -p "$WHIRR_WRAPPER_HOME"/log
cd "$WHIRR_WRAPPER_HOME"/log

if [ $# -le 0 ]; then
	$WHIRR_HOME/bin/whirr
	exit 1
fi

CMD="$1"
shift

$WHIRR_HOME/bin/whirr "$CMD" --config ../cfg/cluster.properties "$@"

if [ "$CMD" = "launch-cluster" ]; then
  $WHIRR_HOME/bin/whirr run-script --config ../cfg/cluster.properties --script $WHIRR_WRAPPER_HOME/opt/node/network.sh
  $WHIRR_HOME/bin/whirr run-script --config ../cfg/cluster.properties --script $WHIRR_WRAPPER_HOME/opt/node/service.sh
  $WHIRR_WRAPPER_HOME/opt/cluster/list.sh
fi

